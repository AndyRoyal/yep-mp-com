/* pages/keyboard/keyboard.wxss */
/*计算器模板*/
.yep-priceFix-bg {
    background: rgb(0, 0, 0);
    opacity: 0.6;
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 2;
}

.yep-priceFix-content {
    z-index: 11;
    /* height: 705rpx; */
    width: 100%;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
}

.yep-priceFix-header {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 1px solid rgb(233, 233, 233);
    font-size: 30rpx;
    color: rgb(51, 51, 51);
}

.yep-priceFix-price {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    color: rgb(51, 51, 51);
    font-size: 26rpx;
    border-bottom: 1px solid rgb(233, 233, 233);
}

.yep-priceFix-price-li {
    flex: 1;
    border-right: 1px solid rgb(233, 233, 233);
    padding: 0 0 0 30rpx;
}

.yep-priceFix-bd-none {
    border: none;
}

.yep-priceFix-price-li-n {
    padding: 0 10rpx 0 0;
}

.yep-priceFix-price-li-v {
    padding: 0 0 0 5rpx;
}

@keyframes mymove {
    0% {
        opacity: 1;
    }

    50% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.yep-priceFix-price-li-f:after {
    content: "|";
    padding: 0 0 0 1px;
    color: blue;
    opacity: 0.5;
    animation: mymove 1s infinite steps(1, start);
}

.yep-priceFix-price-li-disabled {
    color: rgb(153, 153, 153);
}

.yep-priceFix-bd-none .priceFix-price-li-v {
    color: rgb(153, 153, 153);
}

.yep-clr {
    clear: both;
}

.yep-priceFix-keyboard-left {
    float: left;
    width: 75%;
}

.yep-priceFix-keyboard-right {
    float: left;
    width: 25%;
}

.yep-priceFix-keyboard-tr {
    display: flex;
    border-bottom: 1px solid rgb(233, 233, 233);
}

.yep-priceFix-keyboard-td {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-right: 1px solid rgb(233, 233, 233);
    font-size: 44rpx;
    color: rgb(51, 51, 51);
}

.yep-priceFix-keyboard-delete {
    padding: 77rpx 0 77rpx 0;
    text-align: center;
}

.yep-priceFix-keyboard-delete-icon {
    background: url(//img30.360buyimg.com/uba/jfs/t13759/93/1382355172/2597/b108987d/5a1f9e50Nc1f13d48.png) no-repeat center center;
    background-size: 100% 100%;
    width: 75rpx;
    height: 48rpx;
    margin: 0 auto 0 auto;
}

.yep-priceFix-keyboard-submit {
    font-size: 36rpx;
    color: rgb(255, 255, 255);
    background: linear-gradient(to right, rgba(252, 90, 32,1), rgba(247, 67, 71,1));
    height: 202rpx;
    line-height: 202rpx;
    text-align: center;
}