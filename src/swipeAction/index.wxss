.yep-swipe-action{
	position: relative;
	overflow: hidden;
}

.main{
	position: relative;
	top: 0;
	width: 100%;
	z-index: 5;
	transition: left 0.1s ease-in-out;
	transition: right 0.1s ease-in-out;
}

.btn-list {
	position: absolute;
	top: 0;
	z-index: 4;
}

.btn-list-right {
  right: 0;
}

.btn-list-left {
  left: 0;
}

.swipe-btn {
  display: inline-block;
}