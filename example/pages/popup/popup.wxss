
.pop{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.content{
  margin-top:80rpx;
  width: 70%;
  height: 400rpx;
  border:8rpx solid #eee;
  position: relative;
}
.btn{
  width: 140rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background-color: aquamarine;
  text-align: center;
  font-size: 30rpx;
  height: 56rpx;
  color: #666;
  line-height: 50rpx;
}
.cont-cent{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.cont-top{
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
}
.cont-bottom{
  position: absolute;
  left: 50%;
  bottom: -30rpx;
  transform: translateX(-50%);
}
.cont-right{
  position: absolute;
  right: -70rpx;
  top: 50%;
  transform: translateY(-50%);
}
.center-text{
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 150rpx;
  height: 150rpx;
  font-size: 36rpx;
}
.top-text{
  height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 100rpx;
}
.bottom-text{
  height: 250rpx;
  text-align: left;
  font-size: 36rpx;
  line-height: 60rpx;
}
.right-text{
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.right-text image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 60rpx;
}